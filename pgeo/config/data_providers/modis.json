{
    "version": "1.0",
    "source": {
        "type": "FTP",
        "ftp": {
            "base_url": "ladsweb.nascom.nasa.gov",
            "data_dir": "/allData/5/"
        }
    },
    "target": {
        "target_dir": "/home/kalimaha/Development/GIS/MODIS/",
        "folders": [
            {
                "folder_name": "{{product}}",
                "folders": [
                    {
                        "folder_name": "{{year}}",
                        "folders": [
                            {
                                "folder_name": "{{day}}"
                            }
                        ]
                    }
                ]
            }
        ]
    },
    "bands": {
        "0": "NDVI",
        "1": "EVI"
    },
    "subfolders": {
        "original": "original",
        "output": "output",
        "tmp": "tmp"
    },
    "analysis": {
        "create_avg": true,
        "create_da": true,
        "stats": {
            "enable": true,
            "scripts": [
                {
                    "file": "sadc.json",
                    "description": {
                        "en": "SADC"
                    }
                }
            ]
        }
    },
    "services_base_url": "http://127.0.0.1:5005/browse/",
    "services": [
        {
            "id": "list_products",
            "path": "modis",
            "parameters": [],
            "payload": {
                "fields": ["code", "label"],
                "id": "code",
                "label": "label"
            },
            "description": {
                "en": "Available Products",
                "it": "Prodotti Disponibili"
            },
            "selection_type": "single",
            "services": [
                {
                    "id": "list_years_from",
                    "base_url": "http://127.0.0.1:5005/browse/",
                    "path": "modis/{product}",
                    "parameters": [
                        {"parameter_name": "product", "parameter_value": "list_products"}
                    ],
                    "payload": {
                        "fields": ["code", "label"],
                        "id": "code",
                        "label": "label"
                    },
                    "description": {
                        "en": "Available Years - From",
                        "it": "Anni Disponibili - Da"
                    },
                    "selection_type": "single",
                    "services": [
                        {
                            "id": "list_days_from",
                            "path": "modis/{product}/{year}",
                            "parameters": [
                                {"parameter_name": "product", "parameter_value": "list_products"},
                                {"parameter_name": "year", "parameter_value": "list_years_from"}
                            ],
                            "payload": {
                                "fields": ["code", "label"],
                                "id": "code",
                                "label": "label"
                            },
                            "description": {
                                "en": "Available Days - From",
                                "it": "Giorni Disponibili - Da"
                            },
                            "selection_type": "single"
                        }
                    ]
                },
                {
                    "id": "list_years_to",
                    "base_url": "http://127.0.0.1:5005/browse/",
                    "path": "modis/{product}",
                    "parameters": [
                        {"parameter_name": "product", "parameter_value": "list_products"}
                    ],
                    "payload": {
                        "fields": ["code", "label"],
                        "id": "code",
                        "label": "label"
                    },
                    "description": {
                        "en": "Available Years - To",
                        "it": "Anni Disponibili - A"
                    },
                    "selection_type": "single",
                    "services": [
                        {
                            "id": "list_days_to",
                            "path": "modis/{product}/{year}",
                            "parameters": [
                                {"parameter_name": "product", "parameter_value": "list_products"},
                                {"parameter_name": "year", "parameter_value": "list_years_to"}
                            ],
                            "payload": {
                                "fields": ["code", "label"],
                                "id": "code",
                                "label": "label"
                            },
                            "description": {
                                "en": "Available Days - To",
                                "it": "Giorni Disponibili - A"
                            },
                            "selection_type": "single"
                        }
                    ]
                }
            ]
        }
    ]
}